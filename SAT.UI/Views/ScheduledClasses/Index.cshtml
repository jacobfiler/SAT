@model IEnumerable<SAT.DATA.ScheduledClass>

@{
    ViewBag.Title = "Index";
}



<div class="col-md-10 offset-1 custom-formatting">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstructorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cours.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduledClassStatu.SCName)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstructorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cours.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduledClassStatu.SCName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ScheduledClassID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ScheduledClassID })
                        @if (User.IsInRole("Admin"))
                        {
                            @:| @Html.ActionLink("Delete", "Delete", new { id = item.ScheduledClassID })
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-success" })
    </p>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}
